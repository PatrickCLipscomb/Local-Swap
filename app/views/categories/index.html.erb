<h1>A list of products by category</h1><hr>
<% @categories.each do |category| %>
  <% @product_groups = [] %>
  <% @product_holder = []%>
  <% category.products.each {|p| @product_holder.push(p)} %>
  <% while @product_holder.length > 0 %>
    <% @grouper = [] %>
    <% if @product_holder.length >= 3 %>
      <% @grouper = [@product_holder[0], @product_holder[1], @product_holder[2]] %>
      <% 3.times { @product_holder.shift() } %>
    <% elsif @product_holder.length >= 2 %>
      <% @grouper = [@product_holder[0], @product_holder[1]] %>
      <% 2.times { @product_holder.shift() } %>
    <% else %>
      <% @grouper.push(@product_holder[0]) %>
      <% @product_holder.shift() %>
    <% end %>
    <% @product_groups.push(@grouper) %>
  <% end %>
  <div class="row">
    <div class="col-md-4">
      <h4><%= category.name %></h4>
      <h4><%= link_to "View Products", category_path(category), :class => "btn btn-success" %></h4>
    </div>
    <div class="col-md-8">
<div class="container-fluid carasold">
<div class="row-fluid">
<div id="carousel-example-generic<%= category.id %>" class="carousel slide" data-ride="carousel">
<!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active darkblob"></li>
    <% @indicator_counter = 1 %>
    <% (@product_groups.length - 1).times do %>
      <li data-target="#carousel-example-generic" data-slide-to="<%= @indicator_counter %>" class="darkblob"></li>
      <% @indicator_counter += 1 %>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% @product_groups.each do  |prod_group|%>
      <% if prod_group.first.id == category.products.first.id %>
        <div class="item active">
          <div class="thumbnail" style="float:left;margin:10px 15px 10px 70px;width:140px;height:170px; position:relative;"><%= link_to prod_group.first.name, category_product_path(category, prod_group.first)%><br><%= image_tag(prod_group.first.image.url(:thumb), :class => "products-homepage") %></div>
          <div class="thumbnail" style="float:left;margin:10px 15px 10px 70px;width:140px;height:170px; position:relative;"><%= link_to prod_group.last.name, category_product_path(category, prod_group.last)%><br><%= image_tag(prod_group.last.image.url(:thumb), :class => "products-homepage") %></div>
        </div>
      <% else %>
        <div class="item">
          <div class="thumbnail" style="float:left;margin:10px 15px 10px 70px;width:140px;height:170px; position:relative;">
            <%= link_to prod_group.first.name, category_product_path(category, prod_group.first)%><br>
            <%= image_tag(prod_group.first.image.url(:thumb), :class => "products-homepage") %>
          </div>
          <div class="thumbnail" style="float:left;margin:10px 15px 10px 70px;width:140px;height:170px; position:relative;"><%= link_to prod_group.last.name, category_product_path(category, prod_group.last)%><br><%= image_tag(prod_group.last.image.url(:thumb), :class => "products-homepage") %></div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic<%= category.id %>" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic<%= category.id %>" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
</div>
</div>
</div>
