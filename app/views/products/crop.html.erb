<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
      $("#cropbox").Jcrop({
        onChange: update_crop,
        onSelect: update_crop,
        setSelect: [0, 0, <%= @product.image_geometry(:original).width %>, <%= @product.image_geometry(:original).height %>],
        aspectRatio: 1
      });
  });

  function update_crop(coords) {
    var rx = 300/coords.w;
    var ry = 300/coords.h;
      $("#preview").css({
        width: Math.round(rx * <%= @product.image_geometry(:original).width %>) + 'px',
        height: Math.round(ry * <%= @product.image_geometry(:original).height %>) + 'px',
        marginLeft: '-' + Math.round(rx * coords.x) + 'px',
        marginTop: '-' + Math.round(ry * coords.y) + 'px'
      });
      var ratio =
		<%= @product.image_geometry(:original).width %> /
		<%= @product.image_geometry(:large).width %>;
      $("#crop_x").val(Math.round(coords.x * ratio));
      $("#crop_y").val(Math.round(coords.y * ratio));
      $("#crop_w").val(Math.round(coords.w * ratio));
      $("#crop_h").val(Math.round(coords.h * ratio));
  }
</script>

<div align="middle">


  <%= image_tag @product.image.url(:original), :id => "cropbox" %>


<h4>Preview:</h4>


  <div class="crop-preview" style="width:300px;height:300px;overflow:hidden">
    <%= image_tag @product.image.url(:large), :id => "preview" %>
  </div>


<%= form_for @product, :html => { :multipart => true }, url: crop_product_path(@product) do |f| %>
    <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
      <%= f.hidden_field attribute, :id => "#{attribute}" %>
    <% end %>
  <p><%= f.submit "Crop" %></p>
<% end %>

</div>
