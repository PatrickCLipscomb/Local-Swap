<%= form_for [@category, @product] do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :price %>
  <%= f.number_field :price %>
</div>
<div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %>
</div>
<br>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
