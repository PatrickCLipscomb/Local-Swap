<%= form_for [@product, @review] do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :content %>
  <%= f.text_area :content %>
</div>
<div class="field">
  <%= f.label :rating %>
  <%= f.number_field :rating %>
</div>
<br>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
