$('#new_review').remove();
$('#add_review_link').show();
$('#review-list').prepend('<li class="list-group-item clearfix"><em>Review: </em><strong><%= @review.content %></strong><span class="pull-right"><%= link_to upvote_path(@review), :method => "post", remote: true, :class => "btn btn-success" do %><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span><% end %><h4 id="<%=@review.id.to_s%>-votes"><%= @review.votes %></h4><%= link_to downvote_path(@review), :method => "post", remote: true, :class => "btn btn-danger" do %><span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span><% end %></span><br><br><br><br><span align="pull-left li-bottom"><%= link_to @review.name.capitalize + " Page", product_review_path(@product, @review), :class => "btn btn-info btn-sm"%><% if current_user %><% if current_user.user_name == "Admin" || @review.user.id == current_user.id %><%= link_to "Delete Review", product_review_path(@product, @review), remote: true, :method => "delete", :class => "btn btn-danger btn-sm" %><% end %><% end %></span></li>');
