<%=form_for chat_message, remote: true, authenticity_token: true do |f|%>
  <%= f.label :your_chat_message%>:
  <%= f.text_area :body, class: "form-control", data: {textarea: "chat_message"}%>

  <%= f.hidden_field :chat_room_id, value: chat_room.id %>
  <%= f.submit "send", class: "btn btn-primary", :style => "display:none;", data: {send: "chat_message"}%>
<%end%>
